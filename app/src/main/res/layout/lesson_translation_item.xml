<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <TextView
        android:id="@+id/title_tv"
        style="@style/LLA.LearningHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:text="What does the following sentence mean?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/word_phrase_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_margin"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nunito_bold"
        android:text="Word/Phrase"
        android:textColor="@color/primary_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />


    <TextView
        android:id="@+id/answer_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_margin"
        android:layout_marginTop="24dp"
        android:background="@drawable/secondary_btn_bg"
        android:fontFamily="@font/nunito_semibold"
        android:lines="4"
        android:paddingVertical="@dimen/common_margin"
        android:paddingStart="@dimen/common_margin"
        android:paddingEnd="80dp"
        android:textColor="@color/secondary_text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_phrase_tv" />

    <ImageView
        android:id="@+id/reset_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/common_margin"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_rotate_left_solid"
        app:layout_constraintEnd_toEndOf="@+id/answer_tv"
        app:layout_constraintTop_toTopOf="@+id/answer_tv"
        app:tint="@color/primary_color" />

    <TextView
        android:id="@+id/word_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/secondary_btn_bg_small"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/word_2_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_tv" />

    <TextView
        android:id="@+id/word_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin"
        android:background="@drawable/secondary_btn_bg_small"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/word_1_tv"
        app:layout_constraintEnd_toStartOf="@+id/word_3_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/word_1_tv"
        app:layout_constraintTop_toTopOf="@+id/word_1_tv" />

    <TextView
        android:id="@+id/word_3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin"
        android:background="@drawable/secondary_btn_bg_small"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/word_2_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/word_2_tv"
        app:layout_constraintTop_toTopOf="@+id/word_2_tv" />

    <TextView
        android:id="@+id/word_4_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/secondary_btn_bg_small"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:layout_marginTop="@dimen/common_margin"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/word_5_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_1_tv" />


    <TextView
        android:id="@+id/word_5_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/secondary_btn_bg_small"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/word_6_tv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/word_4_tv"
        app:layout_constraintTop_toBottomOf="@+id/word_1_tv" />


    <TextView
        android:id="@+id/word_6_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/secondary_btn_bg_small"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginStart="@dimen/common_margin"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/word_5_tv"
        app:layout_constraintTop_toBottomOf="@+id/word_1_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>