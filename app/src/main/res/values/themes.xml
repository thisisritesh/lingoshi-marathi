<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Llabase" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="Theme.Llabase" parent="Base.Theme.Llabase"/>
    
    
    <style name="LLA.TextButtonStyle" parent="">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/common_text_btn</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="LLA.SecondaryButtonStyle" parent="">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/btn_txt_size</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/secondary_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">4dp</item>
    </style>


    <style name="LLA.PrimaryButtonStyle" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/btn_txt_size</item>
        <item name="android:textColor">@color/bg_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/primary_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="LLA.WrongAnsButtonStyle" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/btn_txt_size</item>
        <item name="android:textColor">@color/bg_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/wrong_ans_btn_bg</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="LLA.RightAnsButtonStyle" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/btn_txt_size</item>
        <item name="android:textColor">@color/bg_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/right_ans_btn_bg</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="LLA.BodyText" parent="">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LLA.LoaderHorizontal" parent="">
        <item name="trackThickness">18dp</item>
        <item name="trackCornerRadius">16dp</item>
        <item name="trackColor">@color/card_color</item>
        <item name="indicatorColor">@color/primary_color</item>
    </style>

    <style name="LLA.Heading" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="LLA.RadioButton" parent="" >
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/radio_color</item>
        <item name="android:background">@drawable/radio_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="LLA.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="LLA.RoundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="LLA.LearningHeading" parent="">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="LLA.LearningCommonText" parent="">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>




</resources>